            <EditText
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="left"
                android:inputType="number" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center_horizontal|bottom"
                android:text="@string/param_s4" />

            <EditText
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="left"
                android:inputType="number" />

            <EditText
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="left"
                android:inputType="number" />

            <EditText
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="left"
                android:inputType="number" />
        </TableRow>
    </TableLayout>

</LinearLayout>