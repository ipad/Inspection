            layout="@layout/specimen_tablerow" />

        <include
            android:id="@+id/tableRow6"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            layout="@layout/specimen_tablerow" />

        <include
            android:id="@+id/tableRow7"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            layout="@layout/specimen_tablerow" />

        <include
            android:id="@+id/tableRow8"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            layout="@layout/specimen_tablerow" />
    </TableLayout>
</ScrollView>