            android:id="@+id/tableRow3"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            layout="@layout/specimen_tablerow" />

        <include
            android:id="@+id/tableRow4"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            layout="@layout/specimen_tablerow" />

        <include
            android:id="@+id/tableRow5"
            android:layout_width="match_parent"
